<%- include('partials/header') %>
<main class="main-container">
  <h1 class="title">Quero Anunciar</h1>
  <form action="/ads/new" method="POST" enctype="multipart/form-data" class="form-container">
    <input type="text" name="name" placeholder="Nome do Doguinho" class="input-field" required>
    <textarea name="description" placeholder="Descrição" class="input-field" required></textarea>
    <input type="text" name="city" placeholder="Cidade" class="input-field" required>
    <input type="file" name="photos" accept="image/*" multiple class="input-field" required>
    <button type="submit" class="submit-button">Adicionar Anúncio</button>
  </form>
</main>
<%- include('partials/footer') %>
